{
  "name": "volute",
  "version": "0.22.0",
  "description": "CLI for creating and managing self-modifying AI minds powered by the Claude Agent SDK",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mimsy/volute.git"
  },
  "keywords": [
    "cli",
    "ai",
    "minds",
    "claude",
    "anthropic"
  ],
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=24"
  },
  "bin": {
    "volute": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js",
    "./api": {
      "types": "./dist/api.d.ts"
    }
  },
  "files": [
    "dist/",
    "drizzle/",
    "templates/"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup && cp -r skills dist/skills && npm run build:web",
    "build:web": "vite build --config src/web/ui/vite.config.ts",
    "dev:web": "vite --config src/web/ui/vite.config.ts",
    "test": "node --import tsx --import ./test/setup.ts --test --test-force-exit --test-concurrency=4 $(find test -name '*.test.ts' ! -name 'daemon-e2e.test.ts' | sort)",
    "test:e2e": "node --import tsx --import ./test/setup.ts --test --test-force-exit --test-concurrency=1 test/daemon-e2e.test.ts",
    "test:all": "npm test && npm run test:e2e",
    "lint": "biome check src/ test/",
    "lint:fix": "biome check --write src/ test/",
    "format": "biome format --write src/ test/",
    "typecheck": "tsc --noEmit",
    "typecheck:templates": "tsc --noEmit -p templates/claude/tsconfig.json && tsc --noEmit -p templates/pi/tsconfig.json",
    "lint:templates": "biome check templates/",
    "typecheck:web": "svelte-check --tsconfig src/web/ui/tsconfig.json",
    "prepare": "lefthook install",
    "prepublishOnly": "npm run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.7.6",
    "@libsql/client": "^0.17.0",
    "@slack/bolt": "^4.6.0",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.3",
    "cron-parser": "^5.5.0",
    "discord.js": "^14.25.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "telegraf": "^4.16.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.34",
    "@biomejs/biome": "2.3.14",
    "@mariozechner/pi-ai": "^0.52.7",
    "@mariozechner/pi-coding-agent": "^0.52.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/adm-zip": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^25.2.0",
    "dompurify": "^3.3.1",
    "drizzle-kit": "^0.31.8",
    "lefthook": "^2.1.0",
    "marked": "^17.0.1",
    "svelte": "^5.53.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^7.3.1"
  }
}
